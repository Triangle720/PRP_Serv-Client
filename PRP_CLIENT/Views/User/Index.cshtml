@model IEnumerable<PRP_CLIENT.Models.User>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor

@{
    ViewData["Title"] = "List";
}

@if (httpContextAccessor.HttpContext.Session.GetString("role") == "admin")
{
    <h1>Users</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Login)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoleId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDeleted)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Login)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDeleted)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.UserId, page = ViewBag.page }) 
                        @Html.ActionLink("Details", "Details", new { id = item.UserId, page = ViewBag.page }) 
                        @Html.ActionLink("Delete", "Delete", new { id = item.UserId, page = ViewBag.page })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <ul class="page-controller">
        @if (ViewBag.page == 0)
        {
            <li class="page-item"><a class="page-link" asp-controller="User" asp-action="Index" asp-route-id="@(ViewBag.page+1)">Next</a></li>
        }

        @if (ViewBag.page > 0)
        {
            <li class="page-item"><a class="page-link" asp-controller="User" asp-action="Index" asp-route-id="@(ViewBag.page -1 )">Previous</a></li>
            <li class="page-item"><a class="page-link" asp-controller="User" asp-action="Index" asp-route-id="@(ViewBag.page + 1)">Next</a></li>
        }

    </ul>
}
else
{
    <h1>List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoleId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleId)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.UserId, page = ViewBag.page })
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <ul class="page-controller">
        @if (ViewBag.page == 0)
        {
            <li class="page-item"><a class="page-link" asp-controller="User" asp-action="Index" asp-route-id="@(ViewBag.page+1)">Next</a></li>
        }

        @if (ViewBag.page > 0)
        {
            <li class="page-item"><a class="page-link" asp-controller="User" asp-action="Index" asp-route-id="@(ViewBag.page -1 )">Previous</a></li>
            <li class="page-item"><a class="page-link" asp-controller="User" asp-action="Index" asp-route-id="@(ViewBag.page + 1)">Next</a></li>
        }

    </ul>
}