@model PRP_CLIENT.Models.User
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor

@if (httpContextAccessor.HttpContext.Session.GetString("token") == null)
{
    <h1>Login</h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label"></label>
                    <input asp-for="Login" class="form-control" name="login" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" type="password" class="form-control" name="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
                <p class="text-danger">
                    @ViewBag.LoginError
                </p>
            </form>
        </div>
    </div>
}