@model IEnumerable<PRP_CLIENT.Models.Company>
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpContextAccessor

@{
    ViewData["Title"] = "Index";
}

<h1>Companies</h1>

<form asp-controller="Company" asp-action="Index">
    <p>
        <input type="text" name="searchBranch" value="@ViewBag.branch">
        <input type="submit" value="Search" />
    </p>
</form>

<p>
    <a asp-action="Create">Create New</a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompanyId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Branch.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsDeleted)
                </td>
                <td>

                    @Html.ActionLink("Edit", "Edit", new { id = item.CompanyId, page = ViewBag.page }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CompanyId, page = ViewBag.page }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CompanyId, page = ViewBag.page }) |
                    @Html.ActionLink("Notes", "Index", "Note", new { CompanyId = item.CompanyId })
                    @Html.ActionLink("Contacts", "Index", "Contact", new { CompanyId = item.CompanyId })
                </td>
            </tr>
        }
    </tbody>
</table>

<ul class="page-controller">
    @if (ViewBag.page == 0)
    {
        <li class="page-item"><a class="page-link" asp-controller="Company" asp-action="Index" asp-route-id="@(ViewBag.page+1)">Next</a></li>
    }

    @if (ViewBag.page > 0)
    {
        <li class="page-item"><a class="page-link" asp-controller="Company" asp-action="Index" asp-route-id="@(ViewBag.page -1 )">Previous</a></li>
        <li class="page-item"><a class="page-link" asp-controller="Company" asp-action="Index" asp-route-id="@(ViewBag.page + 1)">Next</a></li>
    }

</ul>

